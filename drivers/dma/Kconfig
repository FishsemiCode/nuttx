menuconfig DMA
	bool "DMA driver interfaces"
	default n
	select ARCH_DMA
	---help---
		Drivers for various DMA devices.

if DMA

config SONG_DMAG
	bool "Song DMAG"
	depends on ARCH_CHIP_SONG
	depends on CLK

config SONG_DMAS
	bool "Song DMAS"
	depends on ARCH_CHIP_SONG
	depends on CLK

endif
